<div class="heading">
  <h1>All Restaurants</h1>
</div>
<nav class="nav nav-tabs">
  <%= link_to "Create a new restaurant", new_restaurant_path, class: "nav-link" %>
</nav>

<div class="container">
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
    <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <% end %>
  </ul>

</div>
